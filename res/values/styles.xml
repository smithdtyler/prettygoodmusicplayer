<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Reference: https://stackoverflow.com/questions/19106227/best-way-to-change-individual-views-styles-in-a-multi-theme-app -->
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    
    <!-- Application theme. -->
    <style name="PGMPDarkSmall" parent="@style/AppTheme">
        <item name="android:divider">@color/red</item>
        <item name="multiListItem">@style/SmallDarkListItemStyle</item>
        <item name="backgroundColor">@style/DarkLayout</item>
        <item name="dividerColor">@style/DarkDividerStyle</item>
        <item name="backgroundAccentColor">@style/DarkBackgroundAccent</item>
        <item name="nowPlayingSongTextSize">@style/DarkSmallSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/DarkSmallSongInfoTextStyle</item>
    </style>
    
    <style name="PGMPDarkMedium" parent="@style/AppTheme">
        <item name="android:divider">@color/red</item>
        <item name="multiListItem">@style/MediumDarkListItemStyle</item>
        <item name="backgroundColor">@style/DarkLayout</item>
        <item name="dividerColor">@style/DarkDividerStyle</item>
        <item name="backgroundAccentColor">@style/DarkBackgroundAccent</item>
        <item name="nowPlayingSongTextSize">@style/DarkMediumSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/DarkMediumSongInfoTextStyle</item>
    </style>
    
    <style name="PGMPDarkLarge" parent="@style/AppTheme">
        <item name="android:divider">@color/red</item>
        <item name="multiListItem">@style/LargeDarkListItemStyle</item>
        <item name="backgroundColor">@style/DarkLayout</item>
        <item name="dividerColor">@style/DarkDividerStyle</item>
        <item name="backgroundAccentColor">@style/DarkBackgroundAccent</item>
        <item name="nowPlayingSongTextSize">@style/DarkLargeSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/DarkLargeSongInfoTextStyle</item>
    </style>
    
    <style name="PGMPLightSmall" parent="@style/AppTheme">
        <item name="multiListItem">@style/SmallLightListItemStyle</item>
        <item name="backgroundColor">@style/LightLayout</item>
        <item name="dividerColor">@style/LightDividerStyle</item>   
        <item name="backgroundAccentColor">@style/LightBackgroundAccent</item>
        <item name="nowPlayingSongTextSize">@style/LightSmallSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/LightSmallSongInfoTextStyle</item>
    </style>
    
    <style name="PGMPLightMedium" parent="@style/AppTheme">
        <item name="multiListItem">@style/MediumLightListItemStyle</item>
        <item name="backgroundColor">@style/LightLayout</item>
        <item name="dividerColor">@style/LightDividerStyle</item>   
        <item name="backgroundAccentColor">@style/LightBackgroundAccent</item>
        <item name="nowPlayingSongTextSize">@style/LightMediumSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/LightMediumSongInfoTextStyle</item>
   </style>
    
    <style name="PGMPLightLarge" parent="@style/AppTheme">
        <item name="multiListItem">@style/LargeLightListItemStyle</item>
        <item name="backgroundColor">@style/LightLayout</item>
        <item name="dividerColor">@style/LightDividerStyle</item>   
        <item name="backgroundAccentColor">@style/LightBackgroundAccent</item>
        <item name="nowPlayingText">@style/LightNowPlayingText</item>
        <item name="nowPlayingSongTextSize">@style/LightLargeSongTextStyle</item>
        <item name="nowPlayingSongInfoTextSize">@style/LightLargeSongInfoTextStyle</item>
    </style>    

    <style name="SmallListItemStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="MediumListItemStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="LargeListItemStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="DarkBackgroundAccent">
        <item name="android:background">@color/green</item>
        <item name="android:windowBackground">@color/green</item>
    </style>
    
    <style name="DarkLayout">
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="DarkDividerStyle">
        <item name="android:divider">@color/white</item>
    </style>
   
    <style name="SmallDarkListItemStyle" parent="SmallListItemStyle">
        <item name="android:background">@drawable/darkselectable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>

    <style name="MediumDarkListItemStyle" parent="MediumListItemStyle">
        <item name="android:background">@drawable/darkselectable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
    
    <style name="LargeDarkListItemStyle" parent="LargeListItemStyle">
        <item name="android:background">@drawable/darkselectable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
    
    <style name="DarkBackgroundStyle">
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    
    <style name="DarkNowPlayingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
    
    <style name="LightBackgroundAccent">
        <item name="android:background">@color/darkishgray</item>
        <item name="android:windowBackground">@color/darkishgray</item>
    </style>
    
    <style name="LightLayout">
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="LightDividerStyle">
        <item name="android:divider">@color/black</item>
    </style>
    
    <style name="SmallLightListItemStyle" parent="SmallListItemStyle">
        <item name="android:background">@drawable/lightselectable</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
    
    <style name="MediumLightListItemStyle" parent="MediumListItemStyle">
        <item name="android:background">@drawable/lightselectable</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
    
    <style name="LargeLightListItemStyle" parent="LargeListItemStyle">
        <item name="android:background">@drawable/lightselectable</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>    
    
    <style name="LightNowPlayingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>
    
    <style name="LightBackgroundStyle">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="LightSmallSongTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="LightMediumSongTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="LightLargeSongTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="LightSmallSongInfoTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="LightMediumSongInfoTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="LightLargeSongInfoTextStyle" parent="LightNowPlayingText">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="DarkSmallSongTextStyle" parent="DarkNowPlayingText">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="DarkMediumSongTextStyle" parent="DarkNowPlayingText">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="DarkLargeSongTextStyle" parent="DarkNowPlayingText">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="DarkSmallSongInfoTextStyle" parent="DarkNowPlayingText">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="DarkMediumSongInfoTextStyle" parent="DarkNowPlayingText">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="DarkLargeSongInfoTextStyle" parent="DarkNowPlayingText">
